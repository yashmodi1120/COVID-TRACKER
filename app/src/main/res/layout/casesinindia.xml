<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COVID-19 INDIA TRACKER"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="@color/cardview_dark_background">

        </TextView>

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CONFIRMED"
                android:textAlignment="center"
                android:textColor="#cf0000"
                android:layout_weight="1"
                android:gravity="center_horizontal">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textColor="#51c4d3"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="center_horizontal">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="RECOVERED"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#81b214"
                android:gravity="center_horizontal">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DEATH"
                android:textColor="#ffcc29"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp"
                android:src="@drawable/icon_confirmed"
                app:tint="#cf0000">

            </ImageView>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp"
                android:src="@drawable/icon_active"
                app:tint="#51c4d3">

            </ImageView>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp"
                android:src="@drawable/icon_recovered"
                app:tint="#81b214">

            </ImageView>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp"
                android:src="@drawable/icon_death"
                app:tint="#ffcc29">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#cf0000"
                android:id="@+id/totcon"
                android:layout_gravity="center"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#51c4d3"
                android:id="@+id/totact"
                android:layout_gravity="center"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/totrec"
                android:layout_height="wrap_content"
                android:textColor="#81b214"
                android:layout_gravity="center"
                android:textAlignment="center">
            </TextView>
            <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
                android:id="@+id/totdea"
            android:layout_height="wrap_content"
            android:textColor="#ffcc29"
            android:layout_gravity="center"
            android:textAlignment="center">
        </TextView>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ldconf"
                android:textAlignment="center"
                android:textColor="#cf0000"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_horizontal">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ldact"
                android:textColor="#51c4d3"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_horizontal">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ldrec"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#81b214"
                android:gravity="center_horizontal">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/lddea"
                android:textColor="#ffcc29"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textAlignment="center"
                android:text="State/UT"

                android:textStyle="bold"
                android:layout_gravity="center">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:text="Confirmed"
                android:textColor="#cf0000"
                android:textStyle="bold"
                android:layout_gravity="center">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#81b214"
                android:textAlignment="center"
                android:text="Recovered"
                android:textStyle="bold"
                android:layout_gravity="center">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textColor="#ffcc29"
                android:text="Death"
                android:textStyle="bold"
                android:layout_gravity="center">
            </TextView>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:divider="@null"
            android:dividerHeight="0dp"
            >
        </ListView>



    </LinearLayout>




</RelativeLayout>